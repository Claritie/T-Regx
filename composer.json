{
  "name": "pattern/t-regx",
  "version": "1.0",
  "description": "The most advanced PHP regexp library. Clean, descriptive wrapper functions enhancing PCRE extension methods.",
  "keywords": [
    "php",
    "regex",
    "tdd",
    "oop",
    "clean",
    "design"
  ],
  "autoload": {
    "files": [
      "helper/helper.php",
      "test/DataProviders.php",
      "test/Warnings.php",
      "test/ClassWithToString.php",
      "test/ClosureMock.php",
      "test/Utils/ClassWithDefaultConstructor.php",
      "test/Utils/ClassWithErrorInConstructor.php",
      "test/Utils/ClassWithoutSuitableConstructor.php",
      "test/Utils/ClassWithStringParamConstructor.php",
      "test/Utils/ClassWithTwoStringParamsConstructor.php"
    ],
    "psr-4": {
      "TRegx\\CleanRegex\\": "src/TRegx/CleanRegex",
      "TRegx\\SafeRegex\\": "src/TRegx/SafeRegex"
    }
  },
  "autoload-dev": {
    "classmap": [
      "test/"
    ]
  },
  "require": {
    "php": ">=7.1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^6.4",
    "satooshi/php-coveralls": "^2.0"
  }
}
